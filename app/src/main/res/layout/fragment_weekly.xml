<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/thisWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="9pt"
        android:background="@drawable/date_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="1주차" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/whatIs_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="이번 주의 목표는 무엇인가요?"
            android:textColor="@color/black"
            android:textSize="8pt" />

        <Button
            android:id="@+id/add_categoryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:background="@drawable/bluebutton"
            android:backgroundTint="@color/yellow"
            android:minHeight="0dp"
            android:text="카테고리+"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/edittext_bg"
        android:backgroundTint="@color/bright_yellow"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:elevation="5dp"
        android:scrollbars="vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/date_bg"
            android:backgroundTint="@color/green"
            android:paddingHorizontal="10dp"
            android:text="Title" />

        <TextView
            android:id="@+id/category_todoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="todolist" />

        <TextView
            android:id="@+id/category_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/date_bg"
            android:backgroundTint="@color/pink"
            android:paddingHorizontal="10dp"
            android:text="Title" />

        <TextView
            android:id="@+id/category_todoText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="todolist" />
    </LinearLayout>

</LinearLayout>