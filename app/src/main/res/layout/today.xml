<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTodayDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="2021/11/11 ~요일"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/textViewTodayDate"
        android:backgroundTint="#E5E5E5"
        android:layout_margin="20dp"
        android:text="+"/>


    <RelativeLayout
        android:id="@+id/RelativeLayoutTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTodayDate"
        android:layout_margin="20dp"
        android:background="@drawable/layout_border">

        <TextView
            android:id="@+id/textViewTodayCategory"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="#D7EFB8"
            android:gravity="center"
            android:text="HTTP 웹 기본 지식 강의 다 듣기" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/textViewTodayCategory"
            android:backgroundTint="#E5E5E5"
            android:layout_alignParentRight="true"
            android:text="+"
            android:gravity="center"/>

        <CheckBox
            android:id="@+id/checkboxTodo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTodayCategory"
            android:text="강의 ch5 듣기"/>

        <CheckBox
            android:id="@+id/checkboxTodo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkboxTodo1"
            android:text="ch5 내용 정리 및 복습" />

    </RelativeLayout>

    //하루 기분 평가하기

    <RelativeLayout
        android:id="@+id/RelativeLayoutTodayFeeling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#E6F1FC">

        <LinearLayout
            android:id="@+id/RatingToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTodayFeeling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="오늘 하루는 어땠나요?"
                android:textSize="15dp"
                android:textStyle="bold" />

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1" />
        </LinearLayout>

        <EditText
            android:id="@+id/diary"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/RatingToday"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="오늘의 기분은 어땠나요?" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

    </RelativeLayout>

</RelativeLayout>